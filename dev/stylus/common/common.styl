@import '../core/variables.styl';
@import '../core/mixins.styl';

*
  box-sizing border-box
  -webkit-tap-highlight-color transparent

html
  font-size: 1vw
  max-width 100vw
  overflow-x: hidden

body
  font 18px/1.1 $mainFont
  background $black url(../img/bg.svg) center repeat
  color: #fff
  padding 40px 0
  +media(720px)
    padding 20px 0
  &::before
    content: ''
    display block
    position: fixed
    width: 766px
    height: 1398px
    right 0px
    top: 0
    background url(../img/ellipse.png) center no-repeat
    background-size cover
    +media(720px)
      transform: scale(0.4)
      transform-origin: 100% 0

.no-overflow
  overflow: hidden

ul
  list-style none
  padding 0
  margin 0

a,
button,
input
  &:focus
    outline 0

a
  text-decoration none
  color: $white
  transition: $fast
  &:hover
    color: $violet

button
  border: 0

img
  width 100%
  height auto

figure
  margin 0

.ul
  margin 0
  padding 0
  list-style none

p
  line-height 27px
  letter-spacing: .6px
  margin 30px 0

.sr
  sr()

.container
  position relative
  container()
  +media(1200px)
    max-width 1000px
    padding 0 20px
  +media(996px)
    max-width 768px
    padding 0 15px
  +media(720px)
    max-width: 100%
    padding 0 20px


@keyframes moveX
  from
    transform: translateX(0)
  to
    transform: translateX(10px)

.h1
  padding 0
  position relative
  font-size: 160px
  letter-spacing: 4.8px
  text-transform uppercase
  color: $pink
  font-family $boldFont
  margin 111px 18px 0
  line-height 1.2
  +media(1200px)
    font-size 120px
    margin 80px 0 0
    letter-spacing: 3.6px
  +media(996px)
    font-size 94px
    line-height 1
  +media(720px)
    font-size 46px
    line-height: 1.15
    letter-spacing: 1.4px
  span
    display inline-block
    color: #fff
    transform: rotate(7.01deg) translateY(-20px)
    +media(1200px)
      transform: rotate(10.5deg) translate(-5px,-30px)
      letter-spacing: 3.4px
    +media(996px)
      transform: rotate(7.2deg) translate(0,-25px)
      letter-spacing: 2.6px
    +media(720px)
      transform: rotate(11.5deg) translate(-5px,-25px)
      letter-spacing: 1.3px
      display block
      width max-content

  &::after
    content: ''
    display block
    position absolute
    right 9px
    top -176px
    width 327px
    height 320px
    background url(../img/star.svg) center no-repeat
    background-size cover
    +media(1200px)
      transform: rotate(-7deg) scale(.8)
      right -45px
      top -172px
    +media(960px)
      transform: rotate(-37deg) scale(0.6)
      right: -78px;
      top: -164px;
    +media(720px)
      transform: rotate(-53deg) scale(0.45)
      right: -140px
      top: -216px

.label
  font-size 24px
  position absolute
  left -44px
  bottom -92px
  width 189px
  height 138px
  background url(../img/label.svg) center no-repeat
  background-size cover
  +media(1200px)
    width 121px
    height 87px
    left: -16px
    bottom: -52px
    background-size cover
  +media(996px)
    left: -15px
    bottom: -66px
    background-size: cover
    transform: rotate(-9deg) scale(0.8)
  +media(720px)
    transform: rotate(8deg) scale(.8)
    left 103px
    bottom -58px
  &::before
    content: ''
    position absolute
    display block
    background url(../img/label-back.svg) center no-repeat
    background-size cover
    width: 21px
    height: 23px
    z-index -1
    right: 15px
    top: 0
    +media(1200px)
      right: 5px
    +media(996px)
      right: 6px
      top -3px
      transform: scale(.8)

.suspension
  position absolute
  width 6px
  height 380px
  transform: rotate(-7.01deg)
  z-index 2
  bottom: 140px
  +media(1200px)
    bottom 100px
    transform: rotate(-10.5deg)
  +media(996px)
    bottom 70px
    transform: rotate(-7.2deg)
  +media(720px)
    bottom: 35px
    transform: rotate(-11.5deg)
  &--left
    background url(../img/susp-left.svg) center no-repeat
    background-size cover
    left: -5px
    +media(1200px)
      left -17px
    +media(996px)
      left -10px
    +media(720px)
      left -35px
  &--right
    background url(../img/susp-right.svg) center no-repeat
    background-size cover
    right 50px
    +media(1200px)
      right 57px
    +media(996px)
      right 40px
    +media(720px)
      right 43px

.offer
  position relative
  padding-left 240px
  +media(1200px)
    padding-left 164px
    font-size: 16px
    line-height 24px
  +media(996px)
    padding-left 128px
  +media(720px)
    padding-left 0
    padding-top 45px
  &__detail
    width 415px
    margin 27px 0
    +media(1200px)
      margin 19px 0
      width 365px
    +media(720px)
      width 100%
      margin 15px 0 20px
  &__descr
    position absolute
    right 0
    bottom: -260px
    width 415px
    +media(1200px)
      width 385px
      bottom -197px
      font-size 13px
      line-height 1.2
      letter-spacing: .4px
    +media(996px)
      bottom -180px
      width 365px
    +media(720px)
      position static
      width 288px
      max-width: 100%
      margin-top 15px
      line-height: 1.25

.ribbon
  &__wrapper
    display flex
    padding 20px 0
    position relative
    &::before
      content: ''
      display block
      position absolute
      left 0
      top 0
      width 150%
      height 1px
      background rgb(50, 50, 50)
    &::after
      content: ''
      display block
      position absolute
      left 0
      top 0
      width 150%
      height 100%
      z-index -1
      backdrop-filter: blur(3.8px)
      background rgba(29, 29, 29, .5)
  &__text
    filter url(#stroke-text-svg-filter)
    font-family $boldFont
    font-size 39px
    text-transform uppercase
    flex-shrink: 0
  &--down
    z-index 1
    position relative
    transform: rotate(-12.47deg)
    top: -90px
    left: -111px
    +media(1200px)
      top -75px
    +media(996px)
      top -70px
      left -175px
    +media(720px)
      top -45px
      left -155px
    i
      width 46px
      height 48px
      background url(../img/boom--pink.svg) center no-repeat
      background-size cover
      flex-shrink: 0
      margin 0 30px
      transform: rotate(15deg) translate(1px, -5px) scale(1.2)
    .ribbon__text
      color $btn
  &--top
    z-index 1
    position relative
    transform: rotate(-4.8deg)
    top: 55px;
    left: -190px
    +media(1200px)
      top 45px
    +media(996px)
      top 30px
      left -260px
    +media(720px)
      top 135px
      left -555px
    i
      width 46px
      height 48px
      background url(../img/boom--violet.svg) center no-repeat
      background-size cover
      flex-shrink: 0
      margin 0 30px
      transform: rotate(15deg) translate(1px, -5px) scale(1.2)
    .ribbon__text
      color $yellow

