.btn
  border: 1px solid $violet
  outline: none
  padding 16px 20px 16px 24px
  background $violet
  transition: $fast
  display flex
  align-items center
  color: #fff
  font-family $regularFont
  width 320px
  cursor pointer
  font-size 16px
  line-height 20px
  height: 52px
  +media(720px)
    max-width: 100%
  &:hover
    background $btnHover
  &:active
    background $btnActive
  &--arrow
    justify-content space-between
    border-radius: 16px
    position relative
    z-index 2
    .arrow
      width 24px
      height 16px
      background url(../img/arrow.svg) center no-repeat
      background-size cover
      transition: $fast
    &:hover
      .arrow
        animation: moveX
        animation-duration: .5s
        animation-direction: alternate
        animation-iteration-count: 4
  &--submit
    text-align center
    justify-content center
    width 100%
  &:disabled
    pointer-events: none
    filter: grayscale(1)
  +media(720px)
    max-width: 100%
  &:hover
    background $btnHover
  &:active
    background $btnActive

.fieldset
  border: 0
  outline: none
  padding 0

.fieldset-name,
.fieldset-site,
.fieldset-phone
  height 65px

.fieldset-submit
  height 75px
  padding-top 5px

.input[type="text"],
.input[type="tel"]
  border: 1px solid rgba(250, 250, 250, 0.07)
  outline: none
  background #000
  border-radius: 8px
  box-shadow: inset 14.22px 15.23px 43.67px 0px rgba(194, 194, 194, 0.05),0px 65px 130px -5.08px rgba(0, 0, 0, 0.05)
  backdrop-filter: blur(31.48px)
  background: linear-gradient(129.29deg, rgba(250, 250, 250, 0.1) 2.614%,rgba(164, 164, 164, 0) 156.471%)
  padding 12px 20px
  font-size 20px
  color: $white
  position relative
  z-index 1
  width 100%
  &::placeholder
    color: rgba(255,255,255,.5)
    transition: $fast
  &::hover
    &:placeholder
      color: transparent

.checkbox
  display none
  & + label
    font-size 12px
    line-height 16px
    position relative
    cursor pointer
    span
      display block
      padding-left 36px
    &::before
      content: ''
      display block
      position absolute
      left 0
      top 0
      square(24px)
      border: 1px solid #fff
      border-radius: 2px
    &::after
      content: ''
      display block
      position absolute
      left 5px
      top 5px
      square(16px)
      border-radius: 2px
      background #fff
      transition: $fast
      transform: scale(0)
      transform-origin: 50% 50%
  &:checked
    & + label
      &::after
        transform: scale(1)

.error
  display block
  font-size: 11px
  transform: translateY(-15px) scale(0)
  transform-origin: 0 0
  margin-top: 3px
  z-index 0
  transition: $fast
  color: red
  .fieldset--error &
    transform: translateY(5px)

.fieldset--error
  margin-bottom 10px
  .input[type="text"],
  .input[type="tel"]
    border: 1px solid red
  &.fieldset-politic
    .checkbox+label::before
      border-color: red

form
  margin-top 24px